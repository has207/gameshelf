<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="GameDetailsContent" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="hexpand">false</property>
    <property name="spacing">16</property>
    <property name="width-request">420</property>
    <style>
      <class name="details-panel"/>
    </style>

    <!-- Top bar with close button -->
    <child>
      <object class="GtkBox">
        <property name="height-request">20</property>
        <style>
          <class name="details-panel-topbar"/>
        </style>
        <child>
          <object class="GtkBox">
            <property name="hexpand">true</property>
          </object>
        </child>
        <child>
          <object class="GtkButton">
            <property name="icon-name">window-close-symbolic</property>
            <property name="halign">end</property>
            <property name="valign">start</property>
            <style>
              <class name="circular"/>
            </style>
            <signal name="clicked" handler="on_close_details_clicked"/>
          </object>
        </child>
      </object>
    </child>
    
    <!-- Title -->
    <child>
      <object class="GtkBox">
        <property name="spacing">8</property>
        <style>
          <class name="details-panel-title"/>
        </style>
        <child>
          <object class="GtkLabel" id="title_label">
            <property name="xalign">0</property>
            <property name="hexpand">true</property>
            <property name="wrap">true</property>
            <property name="wrap-mode">word-char</property>
            <style>
              <class name="large-title"/>
              <class name="game-detail-title"/>
              <class name="title-1"/>
            </style>
            <attributes>
              <attribute name="scale" value="2.0"/>
            </attributes>
          </object>
        </child>
      </object>
    </child>

    <!-- Play and Edit buttons -->
    <child>
      <object class="GtkBox">
        <property name="spacing">12</property>
        <property name="halign">start</property>
        <style>
          <class name="details-panel-buttons"/>
        </style>
        
        <!-- Play Button -->
        <child>
          <object class="GtkButton" id="play_button">
            <property name="label">Play Game</property>
            <style>
              <class name="suggested-action"/>
              <class name="pill"/>
            </style>
            <signal name="clicked" handler="on_play_button_clicked"/>
          </object>
        </child>
        
        <!-- Edit Button -->
        <child>
          <object class="GtkButton" id="edit_button">
            <property name="label">Edit Game</property>
            <style>
              <class name="pill"/>
            </style>
            <signal name="clicked" handler="on_edit_button_clicked"/>
          </object>
        </child>
      </object>
    </child>

    <!-- Game Info -->
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">16</property>
        <style>
          <class name="game-info-section"/>
        </style>

        <!-- Play Stats -->
        <child>
          <object class="GtkBox">
            <property name="spacing">12</property>
            <style>
              <class name="play-stats-box"/>
            </style>
            <child>
              <object class="GtkImage">
                <property name="icon-name">media-playback-start-symbolic</property>
                <property name="icon-size">large</property>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">4</property>
                <child>
                  <object class="GtkLabel" id="last_played_label">
                    <property name="label">Last Played: Never</property>
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="play_time_label">
                    <property name="label">Play Time: Not played</property>
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="play_count_label">
                    <property name="label">Play Count: 0</property>
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <!-- Timestamps -->
        <child>
          <object class="GtkBox">
            <property name="spacing">12</property>
            <style>
              <class name="timestamps-box"/>
            </style>
            <child>
              <object class="GtkImage">
                <property name="icon-name">x-office-calendar-symbolic</property>
                <property name="icon-size">large</property>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">4</property>
                <child>
                  <object class="GtkLabel" id="created_label">
                    <property name="label">Added: Unknown</property>
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="modified_label">
                    <property name="label">Modified: Unknown</property>
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Runner Info -->
        <child>
          <object class="GtkBox">
            <property name="spacing">12</property>
            <style>
              <class name="runner-info"/>
            </style>
            <child>
              <object class="GtkImage" id="runner_icon">
                <property name="icon-name">application-x-executable-symbolic</property>
                <property name="icon-size">large</property>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">4</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Runner</property>
                    <property name="xalign">0</property>
                    <style>
                      <class name="caption-heading"/>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="runner_label">
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="title-4"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>

    <!-- Remove Button at bottom -->
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <style>
          <class name="actions-container"/>
          <class name="details-panel-actions"/>
        </style>
        
        <!-- Remove Button -->
        <child>
          <object class="GtkButton" id="remove_button">
            <property name="label">Remove Game</property>
            <style>
              <class name="destructive-action"/>
              <class name="pill"/>
            </style>
            <signal name="clicked" handler="on_remove_button_clicked"/>
          </object>
        </child>
      </object>
    </child>

  </template>
</interface>