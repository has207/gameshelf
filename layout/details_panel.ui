<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="GameDetailsContent" parent="GtkBox">
    <property name="orientation">vertical</property>
    <property name="hexpand">false</property>
    <property name="spacing">16</property>
    <property name="width-request">420</property>
    <style>
      <class name="details-panel"/>
    </style>

    <!-- Top bar with close button -->
    <child>
      <object class="GtkBox">
        <property name="height-request">20</property>
        <style>
          <class name="details-panel-topbar"/>
        </style>
        <child>
          <object class="GtkBox">
            <property name="hexpand">true</property>
          </object>
        </child>
        <child>
          <object class="GtkButton">
            <property name="icon-name">window-close-symbolic</property>
            <property name="halign">end</property>
            <property name="valign">start</property>
            <style>
              <class name="circular"/>
            </style>
            <signal name="clicked" handler="on_close_details_clicked"/>
          </object>
        </child>
      </object>
    </child>
    
    <!-- Title -->
    <child>
      <object class="GtkBox">
        <property name="spacing">8</property>
        <style>
          <class name="details-panel-title"/>
        </style>
        <child>
          <object class="GtkLabel" id="title_label">
            <property name="xalign">0</property>
            <property name="hexpand">true</property>
            <property name="wrap">true</property>
            <property name="wrap-mode">word-char</property>
            <style>
              <class name="large-title"/>
              <class name="game-detail-title"/>
              <class name="title-1"/>
            </style>
            <attributes>
              <attribute name="scale" value="2.0"/>
            </attributes>
          </object>
        </child>
      </object>
    </child>

    <!-- Action buttons -->
    <child>
      <object class="GtkBox">
        <property name="spacing">12</property>
        <property name="hexpand">true</property>
        <style>
          <class name="details-panel-buttons"/>
        </style>
        
        <!-- Left-aligned buttons -->
        <child>
          <object class="GtkBox">
            <property name="spacing">12</property>
            <property name="halign">start</property>
            <property name="hexpand">true</property>
            
            <!-- Play Button -->
            <child>
              <object class="GtkButton" id="play_button">
                <property name="label">Play Game</property>
                <style>
                  <class name="suggested-action"/>
                  <class name="pill"/>
                </style>
                <signal name="clicked" handler="on_play_button_clicked"/>
              </object>
            </child>
            
            <!-- Hide/Unhide Button -->
            <child>
              <object class="GtkButton" id="toggle_hidden_button">
                <property name="tooltip-text">Hide/Unhide Game</property>
                <property name="icon-name">view-conceal-symbolic</property>
                <style>
                  <class name="circular"/>
                </style>
                <signal name="clicked" handler="on_toggle_hidden_clicked"/>
              </object>
            </child>
            
            <!-- Edit Button -->
            <child>
              <object class="GtkButton" id="edit_button">
                <property name="tooltip-text">Edit Game</property>
                <property name="icon-name">document-edit-symbolic</property>
                <style>
                  <class name="circular"/>
                </style>
                <signal name="clicked" handler="on_edit_button_clicked"/>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Right-aligned info button -->
        <child>
          <object class="GtkButton" id="info_button">
            <property name="tooltip-text">Open Game Data Directory</property>
            <property name="icon-name">folder-symbolic</property>
            <property name="halign">end</property>
            <style>
              <class name="circular"/>
            </style>
            <signal name="clicked" handler="on_info_button_clicked"/>
          </object>
        </child>
      </object>
    </child>

    <!-- Game Info -->
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">16</property>
        <style>
          <class name="game-info-section"/>
        </style>

        <!-- Play Stats -->
        <child>
          <object class="GtkBox">
            <property name="spacing">12</property>
            <style>
              <class name="play-stats-box"/>
            </style>
            <child>
              <object class="GtkImage">
                <property name="icon-name">media-playback-start-symbolic</property>
                <property name="icon-size">large</property>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">4</property>
                <child>
                  <object class="GtkLabel" id="last_played_label">
                    <property name="label">Last Played: Never</property>
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="play_time_label">
                    <property name="label">Play Time: Not played</property>
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="play_count_label">
                    <property name="label">Play Count: 0</property>
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="completion_status_label">
                    <property name="label">Status: Not Played</property>
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>

        <!-- Timestamps -->
        <child>
          <object class="GtkBox">
            <property name="spacing">12</property>
            <style>
              <class name="timestamps-box"/>
            </style>
            <child>
              <object class="GtkImage">
                <property name="icon-name">x-office-calendar-symbolic</property>
                <property name="icon-size">large</property>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">4</property>
                <child>
                  <object class="GtkLabel" id="created_label">
                    <property name="label">Added: Unknown</property>
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="modified_label">
                    <property name="label">Modified: Unknown</property>
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Runner Info -->
        <child>
          <object class="GtkBox">
            <property name="spacing">12</property>
            <style>
              <class name="runner-info"/>
            </style>
            <child>
              <object class="GtkImage" id="runner_icon">
                <property name="icon-name">application-x-executable-symbolic</property>
                <property name="icon-size">large</property>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">4</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Runner</property>
                    <property name="xalign">0</property>
                    <style>
                      <class name="caption-heading"/>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="runner_label">
                    <property name="xalign">0</property>
                    <property name="ellipsize">end</property>
                    <style>
                      <class name="title-4"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Metadata Section (Combined) -->
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">12</property>
            <style>
              <class name="metadata-box"/>
            </style>
            
            <!-- Grid for metadata fields -->
            <child>
              <object class="GtkGrid">
                <property name="row-spacing">8</property>
                <property name="column-spacing">12</property>
                
                <!-- Platforms Row -->
                <child>
                  <object class="GtkLabel">
                    <property name="label">Platforms:</property>
                    <property name="xalign">1</property>
                    <property name="valign">start</property>
                    <style>
                      <class name="caption-heading"/>
                      <class name="dim-label"/>
                    </style>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">0</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="platforms_label">
                    <property name="xalign">0</property>
                    <property name="wrap">true</property>
                    <property name="wrap-mode">word-char</property>
                    <property name="max-width-chars">40</property>
                    <property name="label">No platforms available</property>
                    <property name="use-markup">false</property>
                    <style>
                      <class name="body"/>
                    </style>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">0</property>
                    </layout>
                  </object>
                </child>
                
                <!-- Genres Row -->
                <child>
                  <object class="GtkLabel">
                    <property name="label">Genres:</property>
                    <property name="xalign">1</property>
                    <property name="valign">start</property>
                    <style>
                      <class name="caption-heading"/>
                      <class name="dim-label"/>
                    </style>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="genres_label">
                    <property name="xalign">0</property>
                    <property name="wrap">true</property>
                    <property name="wrap-mode">word-char</property>
                    <property name="max-width-chars">40</property>
                    <property name="label">No genres available</property>
                    <property name="use-markup">false</property>
                    <style>
                      <class name="body"/>
                    </style>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                
                <!-- Features Row -->
                <child>
                  <object class="GtkLabel">
                    <property name="label">Features:</property>
                    <property name="xalign">1</property>
                    <property name="valign">start</property>
                    <style>
                      <class name="caption-heading"/>
                      <class name="dim-label"/>
                    </style>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="features_label">
                    <property name="xalign">0</property>
                    <property name="wrap">true</property>
                    <property name="wrap-mode">word-char</property>
                    <property name="max-width-chars">40</property>
                    <property name="label">No features available</property>
                    <property name="use-markup">false</property>
                    <style>
                      <class name="body"/>
                    </style>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
                
                <!-- Age Ratings Row -->
                <child>
                  <object class="GtkLabel">
                    <property name="label">Age Ratings:</property>
                    <property name="xalign">1</property>
                    <property name="valign">start</property>
                    <style>
                      <class name="caption-heading"/>
                      <class name="dim-label"/>
                    </style>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">3</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="age_ratings_label">
                    <property name="xalign">0</property>
                    <property name="wrap">true</property>
                    <property name="wrap-mode">word-char</property>
                    <property name="max-width-chars">40</property>
                    <property name="label">No age ratings available</property>
                    <property name="use-markup">false</property>
                    <style>
                      <class name="body"/>
                    </style>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">3</property>
                    </layout>
                  </object>
                </child>
                
                <!-- Regions Row -->
                <child>
                  <object class="GtkLabel">
                    <property name="label">Regions:</property>
                    <property name="xalign">1</property>
                    <property name="valign">start</property>
                    <style>
                      <class name="caption-heading"/>
                      <class name="dim-label"/>
                    </style>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">4</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="regions_label">
                    <property name="xalign">0</property>
                    <property name="wrap">true</property>
                    <property name="wrap-mode">word-char</property>
                    <property name="max-width-chars">40</property>
                    <property name="label">No regions available</property>
                    <property name="use-markup">false</property>
                    <style>
                      <class name="body"/>
                    </style>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">4</property>
                    </layout>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Description -->
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">12</property>
            <style>
              <class name="description-box"/>
            </style>
            <child>
              <object class="GtkBox">
                <property name="spacing">8</property>
                <child>
                  <object class="GtkImage">
                    <property name="icon-name">document-properties-symbolic</property>
                    <property name="icon-size">large</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Description</property>
                    <property name="xalign">0</property>
                    <style>
                      <class name="caption-heading"/>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkLabel" id="description_label">
                    <property name="xalign">0</property>
                    <property name="wrap">true</property>
                    <property name="wrap-mode">word-char</property>
                    <property name="max-width-chars">45</property>
                    <property name="label">No description available</property>
                    <property name="use-markup">true</property>
                    <property name="selectable">true</property>
                    <style>
                      <class name="body"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>


  </template>
</interface>