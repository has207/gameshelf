<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="GameDialog" parent="AdwWindow">
    <property name="title">Game Dialog</property>
    <property name="default-width">500</property>
    <property name="default-height">500</property>
    <property name="modal">true</property>
    <property name="hide-on-close">true</property>
    
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">0</property>
        
        <!-- Header -->
        <child>
          <object class="AdwHeaderBar">
            <property name="show-start-title-buttons">false</property>
            <property name="show-end-title-buttons">false</property>
            <property name="title-widget">
              <object class="AdwWindowTitle" id="dialog_title">
                <property name="title">Game Dialog</property>
              </object>
            </property>
            
            <!-- Cancel Button -->
            <child type="start">
              <object class="GtkButton" id="cancel_button">
                <property name="label">Cancel</property>
                <signal name="clicked" handler="on_cancel_clicked"/>
              </object>
            </child>
            
            <!-- Action Button (Add/Save) -->
            <child type="end">
              <object class="GtkButton" id="action_button">
                <property name="label">Action</property>
                <property name="sensitive">false</property>
                <style>
                  <class name="suggested-action"/>
                </style>
                <signal name="clicked" handler="on_action_clicked"/>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Content -->
        <child>
          <object class="GtkScrolledWindow">
            <property name="hexpand">true</property>
            <property name="vexpand">true</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="spacing">24</property>
                <property name="margin-top">24</property>
                <property name="margin-bottom">24</property>
                <property name="margin-start">24</property>
                <property name="margin-end">24</property>
                
                <!-- Game Title Section -->
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Game Information</property>
                    <child>
                      <object class="AdwEntryRow" id="title_entry">
                        <property name="title">Game Title</property>
                        <property name="use-underline">true</property>
                        <signal name="changed" handler="on_entry_changed"/>
                      </object>
                    </child>
                  </object>
                </child>
                
                <!-- Game ID Section (only for edit mode) -->
                <child>
                  <object class="GtkBox" id="id_section_container">
                    <property name="visible">false</property>
                    <child>
                      <object class="AdwPreferencesGroup">
                        <property name="title">Game ID</property>
                        <child>
                          <object class="AdwEntryRow" id="id_entry">
                            <property name="title">ID</property>
                            <property name="editable">false</property>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
                
                <!-- Runner Selection Section -->
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Runner</property>
                    <child>
                      <object class="GtkListBox" id="runner_list">
                        <property name="selection-mode">single</property>
                        <style>
                          <class name="boxed-list"/>
                        </style>
                        <signal name="selected-rows-changed" handler="on_runner_selected"/>
                      </object>
                    </child>
                  </object>
                </child>
                
                <!-- Game Image Section -->
                <child>
                  <object class="AdwPreferencesGroup">
                    <property name="title">Game Cover Image</property>
                    <child>
                      <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="spacing">12</property>
                        <property name="margin-top">12</property>
                        <property name="margin-bottom">12</property>
                        <property name="halign">center</property>
                        
                        <!-- Preview Image -->
                        <child>
                          <object class="GtkBox" id="image_preview_container">
                            <property name="halign">center</property>
                            <property name="width-request">200</property>
                            <property name="height-request">260</property>
                            <style>
                              <class name="card"/>
                              <class name="image-preview"/>
                            </style>
                            <child>
                              <object class="GtkPicture" id="image_preview">
                                <property name="content-fit">cover</property>
                                <property name="can-shrink">false</property>
                                <property name="hexpand">true</property>
                                <property name="vexpand">true</property>
                              </object>
                            </child>
                          </object>
                        </child>
                        
                        <!-- Select Image Button -->
                        <child>
                          <object class="GtkButton" id="select_image_button">
                            <property name="label">Select Image</property>
                            <signal name="clicked" handler="on_select_image_clicked"/>
                          </object>
                        </child>
                        
                        <!-- Clear Image Button (only for edit mode) -->
                        <child>
                          <object class="GtkBox" id="clear_image_container">
                            <property name="visible">false</property>
                            <child>
                              <object class="GtkButton" id="clear_image_button">
                                <property name="label">Clear Image</property>
                                <style>
                                  <class name="destructive-action"/>
                                </style>
                                <signal name="clicked" handler="on_clear_image_clicked"/>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>